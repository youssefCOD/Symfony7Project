{% extends 'base.html.twig' %}

{% block title %}Latest Posts{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6;
            color: #1f2937;
        }
        .header {
            background-color: #ffffff;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            position: sticky;
            top: 0;
            z-index: 10;
        }
        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .logo {
            font-size: 1.5rem;
            font-weight: 700;
            color: #3b82f6;
            text-decoration: none;
        }
        .nav-menu {
            display: flex;
            gap: 1.5rem;
        }
        .nav-link {
            color: #4b5563;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }
        .nav-link:hover {
            color: #3b82f6;
        }
        .user-menu {
            position: relative;
        }
        .user-avatar {
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 50%;
            cursor: pointer;
            transition: opacity 0.3s ease;
        }
        .user-avatar:hover {
            opacity: 0.8;
        }
        .post-list {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            max-width: 600px;
            margin: 2rem auto;
        }
        .post-card {
            background-color: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }
        .post-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        }
        .post-image {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }
        .post-content {
            padding: 1rem;
        }
        .post-text {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
            margin-bottom: 0.5rem;
        }
        .post-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.875rem;
            color: #6b7280;
        }
        .post-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 1rem;
            background-color: #f3f4f6;
        }
        .btn {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            text-decoration: none;
            transition: background-color 0.3s ease-in-out, transform 0.3s ease;
        }
        .btn:hover {
            transform: translateY(-2px);
        }
        .btn-primary {
            background-color: #3b82f6;
            color: #fff;
        }
        .btn-primary:hover {
            background-color: #2563eb;
        }
        .btn-secondary {
            background-color: #e5e7eb;
            color: #374151;
        }
        .btn-secondary:hover {
            background-color: #d1d5db;
        }
        .create-post-btn {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            background-color: #3b82f6;
            color: #fff;
            width: 3.5rem;
            height: 3.5rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease, transform 0.3s ease;
        }
        .create-post-btn:hover {
            background-color: #2563eb;
            transform: scale(1.1);
        }
        .post-interactions {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 1rem;
            border-top: 1px solid #e5e7eb;
        }

        .interaction-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #4b5563;
            font-size: 0.875rem;
            font-weight: 500;
            background: none;
            border: none;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .interaction-btn:hover {
            color: #3b82f6;
        }

        .interaction-btn svg {
            width: 1.25rem;
            height: 1.25rem;
        }
    </style>
{% endblock %}

{% block body %}
    <header class="header">
        <div class="header-content">
            <a href="{{ path('app_home') }}" class="logo">PostFeed</a>
            <nav class="nav-menu">
                <a href="{{ path('app_home') }}" class="nav-link">Home</a>
                <a href="" class="nav-link">Explore</a> 
                <a href="{{ path('app_profile') }}" class="nav-link">ProfilePage</a>
            </nav>
            <div class="user-menu">
                <img src="{{ asset('images/default-avatar.jpg') }}" alt="User Avatar" class="user-avatar">
            </div>
        </div>
    </header>

    <main class="container mx-auto px-4 py-8">
        {% if posts|length > 0 %}
            <div class="post-list">
                {% for post in posts %}
                    <article class="post-card">
                        <img src="{{ post.imageUrl }}" alt="Post image" class="post-image">
                        <div class="post-content">
                            <p class="post-text">{{ post.content }}</p>
                            <div class="post-meta">
                                <span>{{ post.createdAt ? post.createdAt|date('F j, Y, g:i a') : '' }}</span>
                                <span>{{ post.likesCount }} likes</span>
                            </div>
                        </div>
                        <div class="post-interactions">
                            <button class="interaction-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                </svg>
                                Like
                            </button>
                            <button class="interaction-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                                </svg>
                                Comment
                            </button>
                            <button class="interaction-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                                </svg>
                                Share
                            </button>
                        </div>
                        <div class="post-actions">
                            <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-secondary">View Details</a>
                            <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-secondary">Edit</a>
                        </div>
                    </article>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center text-gray-500">No posts found</p>
        {% endif %}
    </main>

    <a href="{{ path('app_post_new') }}" class="create-post-btn" title="Create New Post">+</a>
{% endblock %}