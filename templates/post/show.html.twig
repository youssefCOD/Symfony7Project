{% extends 'base.html.twig' %}

{% block title %}Post Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Use the same styles from the provided code */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6;
            color: #1f2937;
        }
        .container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 1rem;
            background-color: #fff;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .post-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }
        .post-title {
            font-size: 1.5rem;
            font-weight: bold;
        }
        .post-content {
            margin-bottom: 1rem;
        }
        .post-actions {
            display: flex;
            gap: 1rem;
        }
        .btn {
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }
        .btn-primary {
            background-color: #3b82f6;
            color: #fff;
        }
        .btn-primary:hover {
            background-color: #2563eb;
        }
        .btn-secondary {
            background-color: #e5e7eb;
            color: #374151;
        }
        .btn-secondary:hover {
            background-color: #d1d5db;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="post-header">
            <h1 class="post-title">Post Details</h1>
            <a href="{{ path('app_post_index') }}" class="btn btn-secondary">Back to List</a>
        </div>
        <div class="post-content">
            <p><strong>Id:</strong> {{ post.id }}</p>
            <p><strong>Content:</strong> {{ post.content }}</p>
            <p><strong>Image:</strong> <img src="{{ post.imageUrl }}" alt="Post Image" style="max-width: 100%;"></p>
            <p><strong>Likes:</strong> {{ post.likesCount }}</p>
            <p><strong>Created At:</strong> {{ post.createdAt ? post.createdAt|date('F j, Y, g:i a') : '' }}</p>
            <p><strong>Updated At:</strong> {{ post.updatedAt ? post.updatedAt|date('F j, Y, g:i a') : '' }}</p>
        </div>
        <div class="post-actions">
            <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-primary">Edit</a>
            {{ include('post/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}