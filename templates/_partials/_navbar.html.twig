<nav class="bg-gray-50 shadow-md border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <!-- Logo Section -->
            <div class="flex-shrink-0 flex items-center">
                <a href="{{ path('app_homepage') }}" class="flex items-center">
                    <span class="ml-3 text-2xl font-bold text-indigo-600">PostToday</span>
                </a>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden sm:flex sm:items-center space-x-8">
                {% set navItems = [
                    {path: 'app_homepage', icon: 'home', text: 'Accueil'},
                    {path: 'app_profile_post_index', icon: 'newspaper', text: 'Posts'},
                    {path: 'app_admin_categories_index', icon: 'tag', text: 'Cat√©gories'},
                    {path: 'app_login', icon: 'sign-in-alt', text: 'Login'},
                    {path: 'app_register', icon: 'user-plus', text: 'Register'}
                ] %}
                
                {% for item in navItems %}
                    <a href="{{ path(item.path) }}" class="flex items-center text-base font-medium {{ app.request.get('_route') == item.path ? 'text-indigo-600 border-b-2 border-indigo-600' : 'text-gray-600 hover:text-indigo-500 hover:border-b-2 hover:border-indigo-500' }}">
                        <i class="fas fa-{{ item.icon }} mr-2"></i>
                        {{ item.text }}
                    </a>
                {% endfor %}
            </div>

            <!-- Search and Profile Icons -->
            <div class="hidden sm:flex items-center space-x-4">
                <button class="p-2 rounded-full text-gray-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    <i class="fas fa-search h-6 w-6"></i>
                </button>
                <button class="p-2 rounded-full bg-gray-100 hover:bg-indigo-100 text-gray-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    <i class="fas fa-user-circle h-8 w-8"></i>
                </button>
            </div>

            <!-- Mobile Menu Button -->
            <div class="flex items-center sm:hidden">
                <button id="mobile-menu-button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-600 hover:text-indigo-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    <span class="sr-only">Open main menu</span>
                    <i class="fas fa-bars block h-6 w-6" id="menu-open-icon"></i>
                    <i class="fas fa-times hidden h-6 w-6" id="menu-close-icon"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="sm:hidden hidden" id="mobile-menu">
        <div class="pt-4 pb-3 space-y-2 bg-gray-50 shadow-lg">
            {% for item in navItems %}
                <a href="{{ path(item.path) }}" class="block pl-4 pr-4 py-2 text-base font-medium {{ app.request.get('_route') == item.path ? 'bg-indigo-50 text-indigo-700' : 'text-gray-600 hover:bg-gray-100 hover:text-indigo-500' }}">
                    <i class="fas fa-{{ item.icon }} mr-2"></i>
                    {{ item.text }}
                </a>
            {% endfor %}
        </div>
    </div>
</nav>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuOpenIcon = document.getElementById('menu-open-icon');
        const menuCloseIcon = document.getElementById('menu-close-icon');

        mobileMenuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
            menuOpenIcon.classList.toggle('hidden');
            menuCloseIcon.classList.toggle('hidden');
        });
    });
</script>
